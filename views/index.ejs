<%- include('header') %>
<link rel="stylesheet" href="./style.css">

    <body>
        <a class="newButton" href="/blogs/create">Create new</a>
        <% if(blogs.length> 0) { %>
            <% blogs.forEach(blog=> { %>
                <div class="blog">
                    <a class="url" href="/blogs/<%= blog._id %>">
                    <h1 class="header">
                        <%=blog.title %>
                    </h1>
                    <h2 class="snippet">
                        <%=blog.snippet %>
                            </h1>
                            <p class="body">
                                <%=blog.body %>
                            </p>
                            <span class="time">
                                <%= new Date(blog.createdAt).toUTCString() %>
                            </span>
                        </a>
                </div>
                <%})} %>

    </body>

    </html>